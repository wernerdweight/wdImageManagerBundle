{
    "name":        "wernerdweight/image-manager-bundle",
    "type":        "symfony-bundle",
    "description": "Support for image resizing, cropping and encrypting for Symfony.",
    "keywords":    [
        "image",
        "resize",
        "crop",
        "encrypt"
    ],
    "homepage":    "https://github.com/wernerdweight/wdImageManagerBundle",
    "license":     "MIT",

    "authors": [
        {
            "name": "Werner Dweight Solutions",
            "email": "info@wds.blue"
        }
    ],

    "require": {
        "php": "^7.1.3",
        "symfony/framework-bundle": "~2.8|~3.4|^4.0",
        "wernerdweight/image-manager":  "^3.0"
    },

    "require-dev": {
        "wernerdweight/cs": "*"
    },

    "autoload": {
        "psr-4": {
            "WernerDweight\\ImageManagerBundle\\": "src"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },

    "scripts": {
        "fix": "phpcbf --standard=vendor/wernerdweight/cs/WernerDweight/CS/src/ruleset.xml --extensions=php --encoding=utf-8 --tab-width=4 -sp ./src/ ./tests/ && php-cs-fixer fix --config=vendor/wernerdweight/cs/WernerDweight/CS/.php_cs.dist --verbose --diff ./src/ ./tests/",
        "phpstan": "phpstan analyse ./src/ ./tests/ --level max",
        "phpcs": "phpcs --standard=vendor/wernerdweight/cs/WernerDweight/CS/src/ruleset.xml --extensions=php --encoding=utf-8 --tab-width=4 -sp ./src/ ./tests/",
        "phpcs-fix": "php-cs-fixer fix --config=vendor/wernerdweight/cs/WernerDweight/CS/.php_cs.dist --dry-run --verbose --diff ./src/ ./tests/",
        "phpunit": "phpunit"
    },

    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^4.1"
        }
    }

}
