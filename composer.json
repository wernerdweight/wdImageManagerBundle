{
    "name":        "wernerdweight/image-manager-bundle",
    "type":        "symfony-bundle",
    "description": "Support for image resizing, cropping and encrypting for Symfony.",
    "keywords":    [
        "image",
        "resize",
        "crop",
        "encrypt"
    ],
    "homepage":    "https://github.com/wernerdweight/wdImageManagerBundle",
    "license":     "MIT",

    "authors": [
        {
            "name": "Werner Dweight Solutions",
            "email": "info@wds.blue"
        }
    ],

    "require": {
        "php": "^7.1.3",
        "symfony/framework-bundle": "~2.8|~3.4|^4.0",
        "wernerdweight/image-manager":  "^3.0"
    },

    "require-dev": {
        "wernerdweight/cs": "^1.1.1"
    },

    "autoload": {
        "psr-4": {
            "WernerDweight\\ImageManagerBundle\\": "src"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },

    "scripts": {
        "fix": "ecs check ./src/ ./tests/ --config vendor/wernerdweight/cs/WernerDweight/CS/src/ecs.yaml --fix",
        "phpstan": "phpstan analyse ./src/ ./tests/ --level max",
        "phpmd": "phpmd ./src/ text vendor/wernerdweight/cs/WernerDweight/CS/phpmd.xml",
        "ecs": "ecs check ./src/ --config vendor/wernerdweight/cs/WernerDweight/CS/src/ecs.yaml",
        "ecs-fix": "ecs check ./src/ ./tests/ --config vendor/wernerdweight/cs/WernerDweight/CS/src/ecs.yaml --fix",
        "phpunit": "phpunit",
        "victor": "victor"
    },

    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^4.1"
        }
    }

}
